{
  "manifest_version": 2,

  "name": "Anki pusher",
  "description": "This extension allows the user to push a german words into his Anki from slovnik.seznam.cz",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8765/*",
    "http://*/*"
  ],
  "content_scripts": [{
    "matches": ["*://slovnik.seznam.cz/*"],
    "js": ["jquery-3.2.1.js","crawler.js"]
  }]
}
